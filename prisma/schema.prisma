generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Age {
  filhote
  adulto
}

enum Size {
  Pequenino
  Medio
  Grande
}

model Organization {
  id               String    @id @default(uuid())
  responsible_name String
  email            String
  phone            String
  password_hash    String
  created_at       DateTime?
  addressess       Address[]

  @@map("organizations")
}

model Address {
  id              String       @id @default(uuid())
  organization    Organization @relation(fields: [organization_id], references: [id])
  organization_id String
  street          String
  cep             String
  city            String
  state           String

  @@map("addresses")
}

model Pet {
  id                 String  @id @default(uuid())
  name               String
  description        String
  age                Age
  size               Size
  energy_level       String
  level_independence String
  environment        String
  photos             Photo[]

  @@map("pets")
}

model Photo {
  id         String @id @default(uuid())
  photo_name String
  pet        Pet    @relation(fields: [pet_id], references: [id])
  pet_id     String

  @@map("photos")
}
